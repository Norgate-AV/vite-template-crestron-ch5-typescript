{
    "name": "vite-template-crestron-ch5-typescript",
    "description": "Vite + React + TypeScript template for Crestron CH5",
    "version": "0.0.0",
    "author": "Norgate AV",
    "license": "MIT",
    "type": "module",
    "keywords": [
        "vite",
        "react",
        "typescript",
        "crestron",
        "ch5"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV/vite-template-crestron-ch5-typescript.git"
    },
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "build": "vite build",
        "build:archive": "run-script-os",
        "build:archive:default": "pnpm clean:dist && pnpm ch5-cli archive -p $npm_package_name -P samplesource=$npm_package_name -d build -o dist",
        "build:archive:windows": "pnpm clean:dist && pnpm ch5-cli archive -p %npm_package_name% -P samplesource=%npm_package_name% -d build -o dist",
        "build:docker": "pnpm build && docker-compose up -d",
        "build:deploy:touchscreen": "run-script-os",
        "build:deploy:touchscreen:default": "pnpm ch5-cli deploy -p -H $npm_package_crestron_project_touchscreen_url -t $npm_package_crestron_project_touchscreen_type dist/$npm_package_name.ch5z",
        "build:deploy:touchscreen:windows": "pnpm ch5-cli deploy -p -H %npm_package_crestron_project_touchscreen_url% -t %npm_package_crestron_project_touchscreen_type% dist/%npm_package_name%.ch5z",
        "build:deploy:web": "run-script-os",
        "build:deploy:web:default": "pnpm ch5-cli deploy -p -H $npm_package_crestron_project_web_url -t $npm_package_crestron_project_web_type dist/$npm_package_name.ch5z",
        "build:deploy:web:windows": "pnpm ch5-cli deploy -p -H %npm_package_crestron_project_web_url% -t %npm_package_crestron_project_web_type% dist/%npm_package_name%.ch5z",
        "build:electron": "run-script-os",
        "build:electron:macos": "pnpm clean:app && electron-builder --mac",
        "build:electron:windows": "pnpm clean:app && electron-builder --win",
        "build:electron:default": "pnpm clean:app && electron-builder --linux",
        "build:electron:all": "pnpm clean:app && electron-builder -wml",
        "build:onestep:touchscreen": "pnpm build && pnpm build:archive && pnpm build:deploy:touchscreen",
        "build:onestep:web": "pnpm build && pnpm build:archive && pnpm build:deploy:web",
        "clean:app": "rimraf app",
        "clean:build": "rimraf build",
        "clean:dist": "rimraf dist",
        "clean:all": "pnpm clean:app && pnpm clean:build && pnpm clean:dist",
        "commit": "git-cz",
        "dev": "vite --open",
        "electron:dev": "ELECTRON_IS_DEV=1 concurrently \"cross-env BROWSER=none pnpm dev\" \"wait-on http://localhost:5173 && pnpm electron ./electron/main.js\"",
        "lint": "tsc && eslint . --fix --report-unused-disable-directives --max-warnings 0",
        "prebuild": "pnpm clean:build && pnpm lint",
        "prepare": "husky",
        "preserve": "pnpm build",
        "pretty:fix": "prettier --write .",
        "preview": "vite preview",
        "serve": "serve --cors dist"
    },
    "dependencies": {
        "@crestron/ch5-crcomlib": "link:../CH5ComponentLibrary",
        "@crestron/ch5-webxpanel": "2.8.0",
        "@norgate-av/crestron-ch5-helper": "^2.0.0",
        "@reduxjs/toolkit": "^2.2.0",
        "axios": "^1.6.7",
        "electron-is-dev": "^3.0.1",
        "eruda": "^3.0.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1",
        "react-redux": "^9.1.0",
        "react-router-dom": "^6.22.2",
        "redux": "^5.0.1",
        "redux-logger": "^3.0.6",
        "rooks": "^7.14.1",
        "styled-components": "^6.1.8"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.0.3",
        "@commitlint/config-conventional": "^19.0.3",
        "@crestron/ch5-utilities-cli": "^2.0.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/ncp": "^2.0.8",
        "@types/node": "^20.11.17",
        "@types/node-sass": "^4.11.7",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@types/react-is": "^18.2.4",
        "@types/react-router-dom": "^5.3.3",
        "@types/redux-logger": "^3.0.13",
        "@types/styled-components": "^5.1.34",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "autoprefixer": "^10.4.17",
        "clsx": "^2.1.0",
        "commitizen": "^4.3.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "3.3.0",
        "electron": "^29.1.0",
        "electron-builder": "^24.9.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "lint-staged": "^15.2.2",
        "ncp": "^2.0.0",
        "node-sass": "^9.0.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "react-is": "^18.2.0",
        "rimraf": "^5.0.5",
        "run-script-os": "^1.1.6",
        "serve": "^14.2.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.1.0",
        "vitest": "^1.3.1",
        "wait-on": "^7.2.0"
    },
    "crestron": {
        "project": {
            "touchscreen": {
                "url": "Enter IP/Hostname of Crestron Touchpanel here...",
                "type": "touchscreen"
            },
            "web": {
                "url": "Enter IP/Hostname of Crestron Processor here...",
                "type": "web",
                "config": {
                    "host": "localhost",
                    "ipId": "0x03",
                    "roomId": ""
                }
            }
        }
    }
}
